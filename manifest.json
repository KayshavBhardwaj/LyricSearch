{
  "manifest_version": 3,
  "name": "LyricSearch",
  "version": "1.0",
  "description": "Get lyrics, meaning, and similar songs for the track currently playing on Spotify",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://open.spotify.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LyricSearch"
  },
  "background": {
    "service_worker": "background.js"
  }
}
